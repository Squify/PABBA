{% for message in moderation.moderationMessages %}
    {% if message.writer.id == app.user.id %}
        <!-- Reciever Message-->
        <div class="media w-50 ml-auto mb-3">
            <div class="media-body">
                <div class="bg-primary rounded py-2 px-3 mb-2">
                    <p class="text-small mb-0 text-white">{{ message.content }}</p>
                </div>
                <p class="small text-muted">{{ message.createdAt|date('d/m/Y : H:i') }}</p>
            </div>
        </div>
    {% else %}
        <!-- Sender Message-->
        <div class="media w-50 mb-3">
            <div class="{% if message.writer.id == message.moderation.moderator.id %}bg-blue{% else %}bg-red{% endif %}" data-initials="{{( message.writer.firstname|slice(0,1) ~ message.writer.lastname|slice(0,1))|upper}}"></div>
            <div class="media-body ml-3">
                <div class="bg-light rounded py-2 px-3 mb-2">
                    <p class="text-small mb-0 text-muted">{{ message.content }}</p>
                </div>
                <p class="small text-muted">{{ message.createdAt|date('d/m/Y : H:i') }}</p>
            </div>
        </div>
    {% endif %}

{% endfor %}
