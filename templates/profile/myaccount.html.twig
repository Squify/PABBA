{% extends 'layouts/base_layout.html.twig' %}

{% block title %}PABBA - Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block content %}
    <div class="form-signin">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.lastname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_row(form.birthdate) }}
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-lg btn-primary btn-block">Modification</button>
                </div>
                <div class="col-12 mt-3">
                    <a href="{{ path('user.profile.change_password') }}" class="btn btn-lg btn-warning btn-block">Changement mot de passe</a>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
