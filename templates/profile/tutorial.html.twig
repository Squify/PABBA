{% extends 'base.html.twig' %}

{% block title %}PABBA - Mes Tutoriels{% endblock %}

{% block body %}

    <div class="row">
    {% for tutorial in tutorials %}
{#        {{ dump(tutorial) }}#}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{ vich_uploader_asset(tutorial, 'imageFile') }}" alt="{{ tutorial.title }}">
            <div class="card-body">
                <h5 class="card-title">{{ tutorial.title }}</h5>
                <p class="card-text">{{ tutorial.description|raw }}</p>
                <p class="card-text">{{ tutorial.supplies }}</p>
                <a href="{{ path('details_tutorial', {'id': tutorial.id}) }}" class="btn btn-primary">Voir d√©tail</a>
                <a href="{{ path('delete_tutorial', {'id': tutorial.id}) }}" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
    {%  endfor %}
    </div>



    <button type="button" class="btn add-btn">
        <a href="{{ path('tutorial_create') }}"><i
                    class="bi bi-plus-circle-fill"></i></a>
    </button>
{% endblock %}
