    {% extends 'base.html.twig' %}

    {% block title %}PABBA - Mes Tutoriels{% endblock %}

    {% block body %}

        <div class="container my-5">
            <div class="row">
                <div class="col-12 mx-auto mt-5">
                    <div class="card">
                        <div class="card-header">
                            Mes tutoriels
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive-md">
                                <thead>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Type</th>
                                        {# <th>Outils</th> #}
                                        <th>Description</th>
                                        <th>Fourniture</th>
                                        <th>Désactivé</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for tutorial in tutorials %}
                                        <tr>
                                            <td>{{ tutorial.title }}</td>
                                            <td>{{ tutorial.type.label }}</td>
                                            {# <td>{{ tutorial.outils }}</td> #}
                                            <td>{{ tutorial.description|slice(0,50)|raw }}</td>
                                            <td>
                                                <ul>
                                                    {% for supply in tutorial.supplies %}
                                                        <li>
                                                            {{ supply }}
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </td>
                                            <td>{{ (tutorial.disable) ? "Oui" : "Non" }}</td>
                                            <td>
                                                <a class="btn btn-primary" href="{{ path('tutorial_details', { 'id' : tutorial.id } ) }}"><i class="fas fa-eye"></i>
                                                </a>
                                                <a class="btn btn-warning" href="{{ path('tutorial_update', { 'id' : tutorial.id } ) }}"><i class="fas fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger" href="{{ path('tutorial_delete', { 'id' : tutorial.id } ) }}"><i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <button type="button" class="btn add-btn">
            <a href="{{ path('tutorial_create') }}"><i
                    class="bi bi-plus-circle-fill"></i></a>
        </button>
    {% endblock %}
