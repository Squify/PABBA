{% for comment in tutorial.commentTutorials|reverse %}
	<div class="card my-2">
		<div class="card-body">
			<div class="row">
				<div class="clo-12 m-2">
					<h5>{{ comment.title }}</h5>
					<p>{{ comment.description }}</p>
				</div>
			</div>
            {% if app.user == comment.auteur %}
                modifier
            {% endif %}
		</div>
	</div>
{% endfor %}
