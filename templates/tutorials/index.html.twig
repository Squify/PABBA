{% extends 'base.html.twig' %}

{% block title %}PABBA - Tutoriels
{% endblock %}

{% block body %}

	<div class="row">
			{{ form_start(form) }}

	
		<div class="col-3">
			{{ form_row(form.title) }}
		</div>
		<div class="col-3">
			{{ form_row(form.type) }}
		</div>
		<div class="col-3">
			{{ form_row(form.videoName) }}
		</div>
			
			{{ form_end(form) }}

	</div>

	<div class="row row-cols-3">
		<div class="col-4 offset-6">
			

		</div>

		{% for tutorial in tutorials %}
			<div class="col-3">
				<div class="card" data-id="{{ tutorial.id }}">
					<img src="{{ (tutorial.imageName) ? tutorial.imageName : asset('images/default_tuto.jpg') }}" class="card-img-top" alt="Image du tutoriel {{ tutorial.title }}">
					<div class="card-body">
						<h5 class="card-title">{{ tutorial.title }}</h5>
						<p class="card-text">{{ tutorial.description }}</p>
						<a href="{{ path('tutorial_details', {'id': tutorial.id}) }}" class="btn btn-primary">DÃ©tails</a>
					</div>
				</div>
			</div>
		{%  endfor %}
	</div>
	<button type="button" class="btn add-btn">
		<a href="{{ path('tutorial_create') }}">
			<i class="bi bi-plus-circle-fill"></i>
		</a>
	</button>
{% endblock %}