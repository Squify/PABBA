{% extends 'base.html.twig' %}

{% block title %}Nouveau tutoriel{% endblock %}
{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-6">
                    {{ form_row(form.title, {'id': 'title'}) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.description, {'id': 'description'}) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.videoLink, {'id': 'videoLink'}) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.type) }}
                </div>
            </div>

            <button type="submit" class="btn btn-success">
                ajouter
            </button>

            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
