<div class="modal fade" id="modalComment" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifier commentaire</h5>
            </div>
            {{ form_start(commentForm, {'attr': {'id': 'form_tutorial_comment'}}) }}
            <div class="modal-body">
                {{ form_row(commentForm) }}
            </div>
            <div class="modal-footer">
                <button id="close_modal_comment" type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary">Sauvegarder</button>
            </div>
            {{ form_end(commentForm) }}
        </div>
    </div>
</div>
