{% extends 'base.html.twig' %}

{% block title %}Nouveau lieu{% endblock %}
{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-6">
            {{ form_row(form.address) }}
        </div>
        <div class="col-6">
            {{ form_row(form.type) }}
        </div>
        <div class="col-6">
            {{ form_row(form.latitude) }}
        </div>
        <div class="col-6">
            {{ form_row(form.longitude) }}
        </div>
    </div>


    <button type="submit" class="btn btn-success">
        ajouter
    </button>

    {{ form_end(form) }}

{% endblock %}