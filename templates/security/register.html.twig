{% extends 'base.html.twig' %}

{% block title %}PABBA - Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{#    {{ encore_entry_link_tags('login') }}#}
{% endblock %}

{% block body %}
    <div class="container my-5 pb-5">
        <div class="row">
            <div class="col-12 col-md-7  mx-auto mt-5">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.phone) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.birthdate) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.pictureFile) }}
                        </div>
                        {{ form_rest(form) }}

                        <button class="w-100 btn btn-success" type="submit">Inscription</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
