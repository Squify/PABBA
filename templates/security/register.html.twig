{% extends 'admin/base_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <div class="form-signin">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.lastname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_row(form.birthdate) }}
        </div>

        <div class="row">
            <div class="col-12 col-md-6">
                <button class="w-100 btn btn-success" type="submit">Inscription</button>
            </div>
            {{ form_end(form) }}
            <div class="col-12 col-md-6">
                <a class=" w-100 btn btn-primary" href="{{ path('app_login') }}">Connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
