{% extends 'layouts/base_layout.html.twig' %}

{% set title =  "Récupération de mot de passe" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class=" form-signin">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email) }}
            <a class="mt-2 link link-primary link-sm" tabindex="-1" href="{{ path('app_login') }}">Connexion</a>
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Envoyer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
