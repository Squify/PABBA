{% extends 'layouts/base_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block content %}
    <div class=" form-signin">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger alert-dismissible">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button class="close" data-dismiss="alert"></button>
                </div>
            {% endif %}
            <h1 class="h3 mb-3 fw-normal">Connexion</h1>
            <p>
                {% if app.user %}
                    Vous êtes déjà connecté avec le compte : {{ app.user.username }},
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                    Accédez à votre espace personnel
                {% endif %}
            </p>
            <input class="form-control form-control-lg" placeholder="E-mail" type="email" value="{{ last_username }}" name="email" id="email" required autofocus>
            <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" required="" >
            <a class="link link-primary link-sm" tabindex="-1" href="{{ path('getResetPassword') }}">Mot de passe oublié ?</a>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>
        </form>
    </div>
{% endblock %}
