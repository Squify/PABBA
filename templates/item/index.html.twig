{% extends 'base.html.twig' %}

{% block title %}PABBA - Liste des outils
{% endblock %}

{% block body %}


	<div class="container my-5">
		<div class="row" >
			<button id="open-filter" type="button" data-toggle="modal" data-target="#filterModal" class="btn filter-btn"><i
					class="bi bi-filter"></i>Filtres
			</button>
			<div class="col-12" >
				<div class="row" id="item-list">

				</div>
			</div>

			<button type="button" class="btn add-btn">
				<a href="{{ path('item_create') }}">
					<i class="bi bi-plus-circle-fill"></i>
				</a>
			</button>
		</div>
	 </div>
	<div class="modal right fade" id="filterModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog ">
			<div class="modal-content" id="filter-content">

			</div>
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('searchItem') }}
{% endblock %}
