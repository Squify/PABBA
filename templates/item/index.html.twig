{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <h1>Item index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Propriétaire</th>
                <th>Catégorie</th>
                {# <th>Statut</th> #}
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.owner.firstname }}</td>
                <td>{{ item.category.label }}</td>
                {# <td>{{ (item.status == 0) ? "Disponible" : "Emprunté" }}</td> #}
                <td>{{ item.picture }}</td>
                {# <td><img src="{{ item.picture }}" alt="Image de l'outil {{ item.name }}"></td> #}
                <td>
                    <a href="{{ path('item_show', {'id': item.id}) }}" class="btn btn-primary" title="Voir les détails pour : {{ item.name }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('item_edit', {'id': item.id}) }}" class="btn btn-warning" title="Modifier {{ item.name }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('item_borrow', {'id': item.id}) }}" class="btn btn-secondary" title="Emprunter {{ item.name }} à {{ item.owner.firstname }}"><i class="fas fa-handshake"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('item_new') }}">Create new</a>
{% endblock %}
